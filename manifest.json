{
  "name": "Picture in Picture with controls",
  "version": "1.0.0",
  "description": "Make your floating video with seek forward/backward & playback speed controls",
  "manifest_version": 3,
  "icons": {
    "16": "icon/picture-in-picture_16x16.png",
    "48": "icon/picture-in-picture_48x48.png",
    "128": "icon/picture-in-picture_128x128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon/picture-in-picture_16x16.png",
      "48": "icon/picture-in-picture_48x48.png",
      "128": "icon/picture-in-picture_128x128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ]
}
